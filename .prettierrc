{
  "plugins": [
    "prettier-plugin-apex"
  ],
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.{trigger,cls}",
      "options": {
        "parser": "apex"
      }
    },
    {
      "files": "*.{apex}",
      "options": {
        "parser": "apex-anonymous"
      }
    },
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc"
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    }
  ]
}